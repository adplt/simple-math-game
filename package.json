{
	"name": "GameBuatDina",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"test": "jest --verbose --coverage --forceExit --no-verify",
		"ios": "rndebugger-open && react-native run-ios",
		"android": "cd android && ./gradlew clean && cd .. && rndebugger-open && react-native run-android",
		"lint": "echo 'Running lint...' && eslint app/",
		"prepush": "npm run lint && npm run test"
	},
	"dependencies": {
		"axios": "^0.16.2",
		"lodash": "^4.17.4",
		"prop-types": "^15.6.0",
		"react": "16.0.0-beta.5",
		"react-native": "0.49.1",
		"react-native-keyboard-aware-scroll-view": "^0.3.0",
		"react-native-modal": "^4.0.0",
		"react-native-splash-screen": "^3.0.1",
		"react-navigation": "^1.0.0-beta.13",
		"react-redux": "^5.0.6",
		"redux": "^3.7.2",
		"redux-actions": "^2.2.1",
		"redux-form": "^7.1.1",
		"redux-promise": "^0.5.3",
		"redux-thunk": "^2.2.0"
	},
	"devDependencies": {
		"babel-eslint": "^8.0.1",
		"babel-jest": "^21.2.0",
		"babel-polyfill": "^6.26.0",
		"babel-preset-react-native": "^4.0.0",
		"eslint": "^4.8.0",
		"eslint-plugin-react": "^7.4.0",
		"eslint-plugin-react-native": "^3.1.0",
		"husky": "^0.14.3",
		"jest": "21.2.1",
		"react-native-debugger-open": "^0.3.13",
		"react-test-renderer": "^16.0.0"
	},
	"jest": {
		"preset": "react-native",
		"cacheDirectory": "./cache",
		"coverageThreshold": {
			"global": {
				"statements": 45
			}
		},
		"transformIgnorePatterns": [
			"/node_modules/(?!react-native|@shoutem|react-clone-referenced-element|react-navigation)"
		]
	}
}
